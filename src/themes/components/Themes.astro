---
import { ContainerSection } from 'starlight-theme-black/components'
import starlightThemes from 'virtual:starlight-themes'

import { ThemesIds } from '../../libs/theme'

import Theme from './Theme.astro'

// TODO(HiDeoo) heading

const Wrapper = starlightThemes.currentId === 'black' ? ContainerSection : 'div'
---

<Wrapper>
  <ul>
    {ThemesIds.map((id) => <Theme {id} />)}
  </ul>
</Wrapper>

<style>
  ul {
    display: grid;
    gap: clamp(1rem, calc(0.75rem + 1vw), 1.5rem);
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 22.5rem), 1fr));
    list-style: none;
    padding: 0;
  }
</style>
